                                                        @if (Productos is null)
                                                        {
                                                            <option disabled> Cargando ...</option>
                                                        }
                                                        else if (Productos.Count == 0)
                                                        {
                                                            <option disabled> No hay capacidades</option>
                                                        }
                                                        else
                                                        {
                                                            foreach (var item in Productos)
                                                            {
