                                                                <RadzenBadge Variant="Variant.Outlined" Text="@((data as Precio)?.FchDia.ToShortDateString())" />
                                                            </div>
                                                        </Template>
                                                        <ValueTemplate Context="data">
                                                            @((data as Precio).Producto.Den) | $@((data as Precio).Pre)
                                                        </ValueTemplate>
                                                    </RadzenDropDown>
                                                }
