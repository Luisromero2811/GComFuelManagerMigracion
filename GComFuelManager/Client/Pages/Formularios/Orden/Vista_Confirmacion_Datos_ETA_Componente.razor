<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <b>@Titulo</b>
            </div>
            <div class="modal-body">
                @Vista
            </div>
            @*<div class="modal-footer">
            @Vista_Inferior
            </div> *@
        </div>
    </div>
</div>

@if(ShowBackDrop)
{
    <div class="modal-backdrop fade show" @onclick="Close"></div>
}

@code {
    [Parameter] public RenderFragment Vista { get; set; } = null!;
    // [Parameter] public RenderFragment Vista_Inferior { get; set; } = null!;
    [Parameter] public string Titulo { get; set; } = string.Empty;
    private bool ShowBackDrop = false;

    private string ModalClass = string.Empty;
    private string ModalDisplay = "none";

    public void Open()
    {
        ModalDisplay = "block";
        ModalClass = "show";
        ShowBackDrop = true;
        StateHasChanged();
    }

    public void Close()
    {
        ModalDisplay = "none";
        ModalClass = string.Empty;
        ShowBackDrop = false;
        StateHasChanged();
    }
}