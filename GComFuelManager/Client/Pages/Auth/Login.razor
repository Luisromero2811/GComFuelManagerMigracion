                                    <InputText class="form-control" />
                                
                                </div>
                                <div class="col-12 mb-3">
                                    <label>Contraseña</label>
                                    <InputText type="password" />
                                    
                                </div>
                                <div class="input-group col-4">
                                    <button class="btn btn-primary mx-auto" type="submit">
