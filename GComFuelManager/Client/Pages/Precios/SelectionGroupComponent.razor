    private async Task GetGrupos(string? uri)
    {
        try
        {
            var responseHttp = await http.Get<List<string>>($"api/clientes/buscarGrupo?{uri}");
            if (responseHttp.Error)
            {
                var message = await responseHttp.ObtenerMensajeError();
            }
            else
