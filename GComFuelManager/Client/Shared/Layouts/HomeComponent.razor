@page "/"
@page "/crm"
@attribute [Authorize]

<AuthorizeView>
    <Authorized>
        <div class="card text-black bg-white">
            <div class="card-header">
                <h3 align="center">Bienvenido @context.User.Identity?.Name a la unidad de negocio @context.User.FindFirstValue("Terminal")</h3>
            </div>
        </div>
        <div class="col-12 my-3">
            @* <img class="mx-auto d-block w-50" src="https://i.postimg.cc/Z57T1QGJ/Triptico-Energas-EDITABLE-03.png" alt="Card image cap"> *@
            <div class="col-12 row">
                <div class="col-3">
                    <NavLink class="card text-dark" Match="NavLinkMatch.All" href="crm/contactos">
                        <div class="card d-flex justify-content-center">
                            <img class="card-img-top mx-auto mt-2" src="img/crm.png" alt="Card image" style="width:50%;">
                            <div class="card-body">
                                <h4 class="card-title text-center"><b>Contactos</b></h4>
                            </div>
                        </div>
                    </NavLink>
                </div>
                <div class="col-3">
                    <NavLink class="card text-dark" Match="NavLinkMatch.All" href="crm/oportunidades">
                        <div class="card d-flex justify-content-center">
                            <img class="card-img-top mx-auto mt-2" src="img/salary.png" alt="Card image" style="width:50%;">
                            <div class="card-body">
                                <h4 class="card-title text-center"><b>Oportunidades</b></h4>
                            </div>
                        </div>
                    </NavLink>
                </div>
                <div class="col-3">
                    <NavLink class="card text-dark" Match="NavLinkMatch.All" href="/crm/listado/actividades">
                        <div class="card d-flex justify-content-center">
                            <img class="card-img-top mx-auto mt-2" src="img/clock.png" alt="Card image" style="width:50%;">
                            <div class="card-body">
                                <h4 class="card-title text-center"><b>Actividades</b></h4>
                            </div>
                        </div>
                    </NavLink>
                </div>
                <div class="col-3">
                    <NavLink class="card text-dark" Match="NavLinkMatch.All" href="/crm/historial/actividades">
                        <div class="card d-flex justify-content-center">
                            <img class="card-img-top mx-auto mt-2" src="img/clipbboard.png" alt="Card image" style="width:50%;">
                            <div class="card-body">
                                <h4 class="card-title text-center"><b>Historial de Actividades</b></h4>
                            </div>
                        </div>
                    </NavLink>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>
<style>
    .card-img-custom {
        width: 100%; /* Ajusta el ancho al 100% del contenedor de la tarjeta */
        height: 200px; /* Fija la altura a 200px */
        object-fit: cover; /* Recorta la imagen para llenar el contenedor */
    }
</style>