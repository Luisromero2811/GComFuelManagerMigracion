@typeparam TListado
@typeparam TValue

<div style="width:100%">
    <div class="dropdown-com">
        <button @onclick="@(()=>ShowDropDown = !ShowDropDown)" class="form-control-sm form-control" type="button">
            @if (RenderValue is null || Valor_Seleleccionado is null)
            {
                @if (!string.IsNullOrEmpty(Default_Placeholder))
                {
                    @Default_Placeholder
                }
                else
                {
                    <p>Seleccione un valor</p>
                }

            }
            else
            {
                @if (Valor_Seleleccionado is not null)
                {
                    @RenderValue(Valor_Seleleccionado)
                }
            }
        </button>

        @if (Valor_Seleleccionado is not null)
        {

            <div style="cursor:pointer;padding: .14rem;border: 1px solid #ced4da;" @onclick="ClearValue">
                <i class="fa fa-solid fa-xmark"></i>
            </div>
        }
    </div>

    @if (ShowDropDown)
    {
        <ul class="dropdown-com-content" id="dropdown-list">
            @if (Puede_Filtrar)
            {
                <li class="">
                    <input type="search" class="form-control-sm form-control col-12" @bind="Valor_Filtrado" @oninput="@On_Change_Filter_Value" autofocus="autofocus" />
                </li>
            }
            <Virtualize Items="Listado" Context="Item" TItem="TListado">
                @if (Render is not null)
                {

                    @if (Seleccion_Multiple)
                    {
                        <li>
                            @Render(Item)
                        </li>
                    }
                    else
                    {
                        <li class="" style="cursor:pointer;" @onclick="@(()=>ValorChange(Item))">
                            @Render(Item)
                        </li>
                    }
                }
            </Virtualize>
        </ul>
    }
</div>

