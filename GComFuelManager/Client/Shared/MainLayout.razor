@inherits LayoutComponentBase

<div class="page">
    @if (!isClosed)
    {
        <div class="sidebar">
            @*<MenuLateral />*@
            <NavMenu></NavMenu>
        </div>
    }

    <main>
        <div>
            <MenuNav close=@isClosed closeMenu="CloseMenu"/>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code{
    public bool isClosed = false;

    public void CloseMenu()
    {
        isClosed = !isClosed;
    }
}