@if (Visible)
{
    <td>
        @if (Template_Contenido is not null)
        {
            @Template_Contenido
        }
        else
        {
            @Contenido
        }
    </td>
}
@code {
    [Parameter] public RenderFragment Template_Contenido { get; set; } = null!;
    [Parameter] public string Contenido { get; set; } = string.Empty;
    [Parameter] public bool Visible { get; set; } = true;
}
