@if (Visible)
{
    <th>
        @if (Template_Cabecera is not null)
        {
            @Template_Cabecera
        }
        else
        {
            @Nombre_Cabecera
        }
    </th>
}
@code {
    [Parameter] public RenderFragment Template_Cabecera { get; set; } = null!;
    [Parameter] public string Nombre_Cabecera { get; set; } = string.Empty;
    [Parameter] public bool Visible { get; set; } = true;
}
